import zonwering_screenshot from '../../assets/zonwering_screenshot.webp'
---
<Layout title='Zonwering Apeldoorn - Evi Wammes'>
    <main class="grid grid-cols-3 auto-rows-min justify-start text-left dark:text-white h-full z-0 mt-5 pb-10 w-4/5 lg:w-3/5 2xl:w-6/12">
        <h1 class="text-3xl sm:text-5xl mb-7 row-start-1 col-span-full">Zonwering Apeldoorn</h1>
        <span class="hidden lg:block w-fit row-start-2 col-start-1 colstext-base opacity-80 text-left bg-white dark:bg-cyan-700 dark:opacity-100 dark:text-white text-black p-1 rounded-full px-5 -mt-1">Wordpress</span>
        <span class="hidden lg:block w-fit row-start-2 col-start-2 text-base opacity-80 text-left bg-white dark:bg-cyan-700 dark:opacity-100 dark:text-white text-black p-1 rounded-full px-5 -mt-1">Ontwerp & Development</span>
        <span class="row-start-2 col-start-1 lg:col-start-3 text-base opacity-70 text-left sm:text-right"><a href="https://zonweringapeldoorn.nl" target="_blank">Zonweringapeloorn.nl</a></span>
        <p class="text-lg sm:mt-5 row-start-4 col-span-full">
